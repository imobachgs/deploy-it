section.header.hero
  .hero-head
    .container
      = render 'top_navigation'
  - if user_signed_in?
    .hero-body
      .container
        .columns
          .column.is-half
            .title.is-3= yield :title
            .subtitle.is-5= yield :subtitle
          .column.is-half.has-text-right
            = yield :actions
    .hero-footer
      .container
        .column.is-half.is-offset-one-quarter
          - flash.each do |name, message|
            div class="notification is-#{name}"
              = message
